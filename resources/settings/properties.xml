<resources>
	<properties>
		<property id="inAt" type="number"><!-- Value 0 means display time until next sun change, anything else means time of -->0</property>
		<property id="blControl" type="number"><!-- Value 0 means no backlight control anything else means enable control -->0</property>
		<property id="blOffset" type="number"><!-- Value is minutes before/after sunset/rise to turn on backlight-->0</property>
	</properties>
	<settings>
		<setting propertyKey="@Properties.inAt" title="@Strings.inAtTitle">
			<settingConfig type="list">
				<listEntry value="0">@Strings.showIn</listEntry>
				<listEntry value="1">@Strings.showAt</listEntry>
			</settingConfig>
		</setting>
		<setting propertyKey="@Properties.blControl" title="@Strings.blControlTitle">
			<settingConfig type="list">
				<listEntry value="0">@Strings.disable</listEntry>
				<listEntry value="1">@Strings.enable</listEntry>
			</settingConfig>
		</setting>
		<setting propertyKey="@Properties.blOffset" title="@Strings.blOffsetTitle">
			<settingConfig type="list">
				<listEntry value="-30">@Strings.minusThirty</listEntry>
				<listEntry value="-20">@Strings.minusTwenty</listEntry>
				<listEntry value="-10">@Strings.minusTen</listEntry>
				<listEntry value="0">@Strings.zero</listEntry>
				<listEntry value="10">@Strings.ten</listEntry>
				<listEntry value="20">@Strings.twenty</listEntry>
				<listEntry value="30">@Strings.thirty</listEntry>
			</settingConfig>
		</setting>
	</settings>
</resources>